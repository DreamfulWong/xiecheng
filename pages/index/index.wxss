/**index.wxss**/
page{
    background-color: rgba(128, 128, 128, 0.075);
}

.header{
    width: 100%;
    background: white;
    padding: 10px
}

.search{
    width: 80%;
    background-color: rgba(128, 128, 128, 0.219);
    font-size: 15px;
    margin: 0 auto;
    padding: 3px 0;
    text-align: center;
    border-radius: 20px;
}
.lunbo swiper{
    height: 100px;
}
.lunbo image{
    height: 100px;
    width: 100%;
}
.container{
    width: 90%;
    margin: 10px auto;
}
.categoryHeader{
    margin: 0 auto;
    border-radius: 10px 10px 0 0;
    background-color: white;
}
.categoryHeader_item{
    width: 20%;
    margin: 8px 0;
    float: left;
    text-align: center;
}
.categoryHeader_item text{
    font-size: 12px;
}
.categoryHeader_item_warp image{
    width: 30px;
    height: 30px;
}
.categoryMid{
    margin: 0 auto;
}
.categoryMid_item{
    width: 33.3%;
    float: left;
}
.categoryMid_item_warp image{
    width: 100%;
    height: 100px;
}
.categoryFooter{
    background-color: white;
    border-radius: 0 0 10px 10px;
}
.categoryFooter_item{
    width: 20%;
    float: left;
    text-align: center;
}
.categoryFooter_item text{
    font-size: 10px;
}
.categoryFooter_item_warp image{
    margin-top: 5px;
    width:70%;
    height: 30px;
}
.chaozhitehui text{
    display: block;
    text-align: center;
    font-size: 20px;
    margin-top: 20px;
    margin-bottom: 10px;
}
.chaozhitehui_item{
    float: left;
    width: 31%;
    margin: 0 1%;
}
.chaozhitehui_item_warp image{
    width: 100%;
    height: 100px;
    border-radius: 10px;

}


